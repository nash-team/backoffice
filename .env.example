# Application Environment
# Values: development, staging, production
ENVIRONMENT=development

# Database Configuration
# For local development (without Docker)
DATABASE_URL=postgresql://username:password@localhost:5432/backoffice_dev
# For Docker Compose (use asyncpg driver + service name "postgres")
# DATABASE_URL=postgresql+asyncpg://backoffice:dev_password@postgres:5432/backoffice_dev
# For testing
# DATABASE_URL=sqlite:///./test.db

# Server Configuration
# development: 127.0.0.1 (localhost only)
# production: 0.0.0.0 (all interfaces) - use with caution
HOST=127.0.0.1
PORT=8001

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_CREDENTIALS_PATH=credentials/google_credentials.json

# ========================================
# IMAGE GENERATION API KEYS
# ========================================
# Model selection is in config/generation/models.yaml (NOT here!)
# This file only contains API keys and secrets.

# OpenRouter API Key (for google/gemini-*, black-forest-labs/flux-*, etc.)
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Google Gemini Direct API Key (optional, for direct Gemini access)
# Get your key from: https://aistudio.google.com/app/apikey
# Note: Imagen 3 not available in all countries via AI Studio
GEMINI_API_KEY=your-gemini-api-key-here

# HuggingFace API Token (for local models like FLUX.1)
# Get it from: https://huggingface.co/settings/tokens
# Required for gated models (e.g., black-forest-labs/FLUX.1-schnell)
HF_API_TOKEN=your-huggingface-token-here

# Replicate API Token (alternative, $0.003/image)
# Get your token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your-replicate-api-token-here

# Application Configuration
APP_NAME=Backoffice
APP_VERSION=1.0.0
DEBUG=True

# Testing Environment
TESTING=false

# ========================================
# LOCAL STABLE DIFFUSION (Optional)
# ========================================
# For local image generation (100% FREE, no API costs)
# Model selection is in config/generation/models.yaml
# See models.yaml for available models and requirements

# Force CPU usage (slower, works without GPU)
LOCAL_SD_USE_CPU=false

# SDXL-turbo quality tuning (if using SDXL-turbo)
SDXL_TURBO_STEPS=6
SDXL_TURBO_GUIDANCE=0.0
