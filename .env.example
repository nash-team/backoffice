# Application Environment
# Values: development, staging, production
ENVIRONMENT=development

# Security Configuration
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/backoffice_dev
# For testing
# DATABASE_URL=sqlite:///./test.db

# Server Configuration
# development: 127.0.0.1 (localhost only)
# production: 0.0.0.0 (all interfaces) - use with caution
HOST=127.0.0.1
PORT=8001

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_CREDENTIALS_PATH=credentials/google_credentials.json

# LLM Configuration
# Provider: openai, openrouter
LLM_PROVIDER=openrouter
LLM_API_KEY=your-llm-api-key-here

# Text Generation Models (for ebook content/stories)
# OpenRouter models: anthropic/claude-3.5-sonnet, openai/gpt-4o, google/gemini-2.5-pro
LLM_TEXT_MODEL=anthropic/claude-3.5-sonnet

# Image Generation Configuration
# Gemini via OpenRouter (recommended - uses same API key as text generation)
LLM_IMAGE_MODEL=google/gemini-2.5-flash-image-preview
#
# Alternative: OpenAI DALL-E (Requires separate API key)
# OPENAI_API_KEY=your-openai-api-key-here
# LLM_IMAGE_MODEL=dall-e-3

# OpenRouter Configuration
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Application Configuration
APP_NAME=Backoffice
APP_VERSION=1.0.0
DEBUG=True

# Testing Environment
TESTING=false
